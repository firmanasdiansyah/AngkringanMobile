<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SusuJaheActivity">

    <ImageView
        android:id="@+id/susujahe"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/susujahe"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_susujahe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Susu Jahe"
        android:textSize="30sp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/susujahe"/>

    <TextView
        android:id="@+id/desc_susujahe"
        android:text="Susu Jahe adalah minuman yang sering ditemukan
di setiap angkringan. Minuman ini berbahan dasar jahe dengan tambahan
susu dan diseduh dengan air panas. Minuman ini menjadi pelengkap saat
makan nasi kucing apalagi saat musim hujan."
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/title_susujahe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>