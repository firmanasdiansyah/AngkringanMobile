<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SateKepalaActivity">

    <ImageView
        android:id="@+id/satekepala"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/satekepala"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_satekepala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sate Kepala"
        android:textSize="30sp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/satekepala"/>

    <TextView
        android:id="@+id/desc_satekepala"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        android:text="Sate Kepala adalah makanan yang sering ditemukan
di setiap angkringan. Sate ini menggunakan kepala ayam sebagai bahannya
dengan bumbu mercon atau campuran kecap dan dibakar. Menu ini menjadi pendamping saat
makan dengan nasi kucing."
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/title_satekepala"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>